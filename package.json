{
  "name": "meetzen",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "envs": "turbo envs",
    "dev": "turbo dev",
    "postinstall": "bun prisma generate",
    "lint": "oxlint",
    "check-types": "turbo check-types",
    "shadcn": "bun --filter @meetzen/ui shadcn",
    "prisma": "bun --filter @meetzen/database prisma-command",
    "clean-workspace": "rm -rf node_modules && turbo clean-workspace"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.12",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@elysiajs/eden": "^1.3.2",
    "better-auth": "^1.2.8",
    "elysia": "^1.3.3",
    "framer-motion": "^12.15.0",
    "next-themes": "^0.4.6",
    "tailwind-merge": "^3.3.0",
    "tw-animate-css": "^1.3.2"
  }
}
